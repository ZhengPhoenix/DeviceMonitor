<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Enable Monitor Lock">
        <SwitchPreference
            android:title="Monitor Screen Lock"
            android:summary="take picture if wrong pattern"
            android:key="monitor_enable"
            android:defaultValue="false"
            android:singleLine="true"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Receive Account">
        <EditTextPreference
            android:title="Send To"
            android:key="sendto"
            android:inputType="textEmailAddress"
            android:summary="receiving account"
            android:singleLine="true">
        </EditTextPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="More Option">
        <CheckBoxPreference
            android:title="Disable take picture in 10s with correct psw"
            android:key="disablepic"
            android:defaultValue="false">
        </CheckBoxPreference>
    </PreferenceCategory>

    <Preference
        android:title="Connection Test"
        android:key="connection_test"/>
</PreferenceScreen>
